{
  "name": "jetti",
  "version": "1.0.0",
  "description": "Jetti.io backend assignment",
  "scripts": {
    "dev": "debug=* NODE_PATH=./src ts-node-dev --respawn ./src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "NODE_PATH=./dist node ./dist/index.js",
    "lint-prettier": "prettier --config .prettierrc --list-different '{src,test}/**/*.{ts,js,css,scss}'",
    "prettier": "prettier --config .prettierrc --write './**/*.{ts,js,css,scss,json,md}'",
    "test": "NODE_ENV=test NODE_PATH=./src mocha --require ts-node/register 'test/integration/**/*.test.ts' --timeout 20000 --exit",
    "commit": "git-cz"
  },
  "dependencies": {
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/body-parser": "^1.19.1",
    "@types/chai": "^4.2.21",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "4.0.0",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.9.1",
    "@types/request-promise-native": "^1.0.18",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-no-array-reduce": "^1.0.26",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.0",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-node": "10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "{src,test}/**/*.{js,ts}": [
      "eslint --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
